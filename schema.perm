entity user {}

entity oodiks {
  relation member @user
  relation admin @user

  action create_request = admin or member
  action delete_request = admin
}

entity garrison {
  relation assigned @user
}

entity petitions {
  relation creator @user
  relation editor @user
  relation reader @user
  relation exporter @user

  action create = creator
  action edit = editor
  action read = reader or creator or editor
  action export = exporter or creator or editor
}
